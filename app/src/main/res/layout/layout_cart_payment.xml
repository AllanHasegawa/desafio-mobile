<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cart_payment_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CC info:"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/cart_payment_card_number_tiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        android:text="1111111111111111"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/cart_payment_card_name_tiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name in the card"
        android:text="Me"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/cart_payment_card_cvv_tiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:text="123"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/cart_payment_card_exp_month_tiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expiration Date Month"
        android:text="12"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/cart_payment_card_exp_year_tiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expiration Date Year"
        android:text="12"/>

    <Button
        android:id="@+id/cart_payment_confirm_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Pagamento"/>

</LinearLayout>

